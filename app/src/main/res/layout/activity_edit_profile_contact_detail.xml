<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.EditProfileContactDetailActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        app:title="Edit Contact Details"
        app:titleTextAppearance="@style/toolbar_text"
        app:titleCentered="true"
        app:navigationIconTint="@color/primary_color"
        app:navigationIcon="@drawable/outline_arrow_circle_left_"
        app:titleTextColor="@color/primary_color" />

    <View
        android:id="@+id/viewToolbarLine"
        android:background="@color/primary_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/btnUpdate"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Name" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/update_edittext_border"
                android:drawableLeft="@drawable/baseline_person"
                android:drawablePadding="8dp"
                android:hint="Enter Name"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/update_edittext_border"
                android:drawableLeft="@drawable/outline_phone_24"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Enter Phone Number"
                android:padding="15dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Email" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/outline_email_24"
                android:drawablePadding="8dp"
                android:background="@drawable/update_edittext_border"
                android:hint="Enter Email"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="FaceBook Link" />

            <EditText
                android:id="@+id/etFacebookLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/update_edittext_border"
                android:drawableLeft="@drawable/baseline_add_link_24"
                android:drawablePadding="8dp"
                android:hint="Enter Facebook Link"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:text="Website Link" />

            <EditText
                android:id="@+id/etWebsiteLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/baseline_add_link_24"
                android:drawablePadding="8dp"
                android:visibility="gone"
                android:background="@drawable/update_edittext_border"
                android:hint="Enter Website Link"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="LinkedIn Link" />

            <EditText
                android:id="@+id/etLinkedInLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/baseline_add_link_24"
                android:drawablePadding="8dp"
                android:background="@drawable/update_edittext_border"
                android:hint="Enter LinkedIn Profile Link"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="Instagram Link" />

            <EditText
                android:id="@+id/etInstagramLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/baseline_add_link_24"
                android:drawablePadding="8dp"
                android:background="@drawable/update_edittext_border"
                android:hint="Enter Instagram Link"
                android:visibility="gone"
                android:padding="15dp" />


        </LinearLayout>
    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="12dp"
        app:cornerRadius="0dp"
        android:text="@string/edit_details"
        android:textSize="18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/layoutProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/black"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_indeternimate" />

    </FrameLayout>


</RelativeLayout>